 {{>navbar}}

<div class="container-lg">
    <div class="row">
    <div class="col-sm-8">
          <h1 class="detailsHeader"> <strong> {{project.title}} </strong> <br>
        ID#: {{project.id}} </h1>

   <div id="detailsDiv">
    <h3>Title</h3>
    <p>{{project.title}}</p>
    <br>
    <h3>Description</h3>
    <p>{{project.description}}</p>
    <br>

    <a  type="button" class="viewCollab" data-value="{{project.id}}">View Collaborators</a>
    <div class="collabSection{{project.id}}">
                        
    </div>
    
    <button id="requestBtn" data-value={{project.id}} data-toggle="modal" data-target="#myModal">Request to Join</button>

    <!-- The Modal -->
              <div id="myModal" class="modal">
                <!-- Modal content -->
                <div class="modal-content">
                  <span class="close">&times;</span>

                  <!-- Create a Project form -->
                  <form id="collab-form">
                      <div class="form-group">
                        <label for="create-project">Request to Collaborate</label>
                        <input type="text" name="message" class="form-control form-control-sm" placeholder="enter a message here">
                        <br>
                        <p>Your username, email and message will be sent to the owner of this project.</p>
                      </div>
                     
                      <input type="submit">
                  </form>
                </div>
              </div>
    
</div>
    </div>
    <div class="col-sm-4">
        <div class="project-owner">
            <img src="./images/del.png" alt="profile avatar">
        </div>
        
    </div>
  </div>
  
</div>




<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/project.js"></script>
