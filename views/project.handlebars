 {{>navbar}}

<div class="container-lg">
    <div class="row">
    <div class="col-sm-8">
          <h1 class="detailsHeader"> <strong> {{project.title}} </strong> <br>
        Project ID#: {{project.id}} </h1>

   <div id="detailsDiv">
    <h3>Title</h3>
    <p>{{project.title}}</p>
    <br>
    <h3>Description</h3>
    <p>{{project.description}}</p>
    <br>
     <h3>Languages</h3>
    <p>{{project.tag}}</p>

    <a  type="button" class="viewCollab" data-value="{{project.id}}">View Collaborators</a>
    <div class="collabSection{{project.id}}">
                        
    </div>
    
    <button id="requestBtn" data-value={{project.id}} data-toggle="modal" data-target="#myModal">Request to Join</button>
    <button id="showReq" data-value={{project.id}} >View Requests To Join</button>
    <div class="requestSection{{project.id}}">

    </div>

    <!-- The Modal -->
        <div id="myModal" class="modal">
          <!-- Modal content -->
          <div class="modal-content">
            <span class="close">&times;</span>

            <!-- Create a Project form -->
            <form id="collab-form">
                <div class="form-group">
                  <label for="create-project">Request to Collaborate</label>
                  <input type="text" name="message" class="form-control form-control-sm" placeholder="enter a message here">
                  <br>
                  <p>Your username, email and message will be sent to the owner of this project.</p>
                </div>
                     
                <input type="submit">
            </form>
        </div>
        </div>
    
</div>
    </div>
    <div class="col-sm-4">
        <div class="row">
        <div class="col-sm">
            <div class="card" id="project-details" >
                <img src="/images/icons8-customer-90.png" alt="profile avatar">
            <div class="card-body">
            <h5 class="card-title">Profile</h5>
            <p class="card-text">owned by: <span class="userid"></span></p>
            <p class="card-text">technologies used: <span class="tech"></span></p>
          </div>
          </div>
        </div>
         </div>
        
    </div>
  </div>
  
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/project.js"></script>
