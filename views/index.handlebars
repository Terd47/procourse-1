  {{>navbar}}


  <div class="container-lg">
    <div class="row">
      <div class="col-md-8 col-md-offset-3">
        <h2>Welcome <span class="member-name"></span></h2>
      </div>
    </div>
  </div>

  <div class="container-lg">
    <div class="row">
      <div class="col-md-8">
        <div class="col-sm-4 dashboard">
         <div class="col">
           <h3>DashBoard</h3>
           <div class="head">
             <h4 >Github: <span class="github"></span></h4>
             <h4 >Email: <span class="email"></span></h4>
             <h4>Member since: <span class="age"></span></h4>
                    <!-- Trigger/Open The Modal -->
          <button class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" id="myBtn">New Project</button>
           </div>
          </div>

        </div>
        <div class="col-sm-4 requests">
          <div class="col">
            <h3>Pending Requests</h3>
          </div>
        </div>
      
      </div>
      <!-- Search Section -->
      <div class="col-md-4">

        <form class="search-form">

          <input type="search" id="term" name="term" placeholder="search here">

          <select name="searchType" id="searchType">
            <option value="title">By Title</option>
            <option value="user">By User</option>
          </select>

          <input type="submit" id="searchBtn" value="Search"></input>

        </form>
         <div class="card searchContent">
         </div>
        </div>
  
      </div>
  
    </div>
  </div>
  <div class="container-lg">
    <div class="row">
      <div class="col-md-12">
        
        <div class="card-colums" id="project-container">
            <!-- Create Project -->
              <!-- The Modal -->
              <div id="myModal" class="modal">
                <!-- Modal content -->
                <div class="modal-content">
                  <span class="close">&times;</span>

                  <!-- Create a Project form -->
                  <form action="/api/create_project" method="POST" id="create-form">
                      <div class="form-group">
                        <label for="create-project">Create New Project</label>
                        <input type="text" name="title" class="form-control form-control-sm" placeholder="project title" placeholder="Title">
                      </div>
                      <div class="form-group">
                          <label for="project-description">Description</label>
                          <textarea name="description"class="form-control form-control-sm" id="" cols="5" rows="5"></textarea>
                      </div>
                      <div class="form-group">
                          <label for="tag">Add Languages</label>
                          <input type="text" name="tag" placeholder="seperate tags by comma">
                      </div>
                      <input type="submit">
                  </form>
                </div>
              </div>
             <!-- Cards -->
             <div class="column" >
              {{#each project}}
                <div class="card prod">
                    <div class="card-body">

                    <h3><a class="card-title title" href="/projectdetails/{{id}}">{{title}}</a></h3><hr>
                    <h6 class="card-subtitle mb-2 text-muted desc">Project Description</h6>
                    <p class="card-text">{{description}}</p>
                    {{!-- Collab Section --}}
                      <a type="button" class="viewCollab" data-value="{{id}}">View Collaborators</a>
                      <div class="collabSection{{id}}">
                        
                      </div>
                    <a href="#" class="card-link">Created By</a>
                    <a href="/api/update/{{id}}" data-value="{{id}}" class="updateProj"> Update</a>
                     <button class="del btn btn-primary" id="deleteProject" data-value={{id}}>delete</button>

                    </div>
                </div>
              
              {{/each}}
            </div>
        </div>
      </div>
    </div>
  </div>
  
